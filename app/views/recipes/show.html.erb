<h1><%= @resource.title %></h1>
<h2><em>By: <%= @resource.user.username %></em></h2>

<p><%= @resource.description %></p>
<ol>
	<% @resource.steps.sort_by(&:order).each do |step| %>
	<li><strong><%= step.title %></strong>: <%= step.description.truncate(50) %> <%= link_to '&rarr;'.html_safe, recipe_step_path(step) %></li>
	<% end %>		
</ol>
<footer>
	<% if @resource.user == current_user %>
	<%= link_to 'Add Step', new_recipe_step_path(recipe_id: @resource), 'data-button': 'green' %>
	<%= link_to 'Edit', edit_recipe_path(@resource), 'data-button': 'green' %>
	<%= link_to 'Delete', recipe_path(@resource), method: :delete, 'data-button': 'red' %>
	<% end %>
</footer>